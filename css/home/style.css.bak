

body {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
	overflow-x: hidden;
}
a {
	text-decoration: none;
}
.search_body {
	width: 100%;
	height: 680px;
	 animation: myanimation 30s infinite;
}
@keyframes myanimation {
  0% {
		background-image: linear-gradient(to right, #c31432, #240b36);
		-webkit-transition: background-image 1000ms linear;
		-ms-transition: background-image 1000ms linear;
		transition: background-image 1000ms linear;
  }
    25%{
		background-image: linear-gradient(to right, #540E1F, #6E2333);
		-webkit-transition: background-image 1000ms linear;
		-ms-transition: background-image 1000ms linear;
		transition: background-image 1000ms linear;
  }
    50%{
		background-image: linear-gradient(to right, #373B44, #4286f4);
		-webkit-transition: background-image 1000ms linear;
		-ms-transition: background-image 1000ms linear;
		transition: background-image 1000ms linear;
  }
    75%{
		background-image: linear-gradient(to right, #323232, #0f9b0f);
		-webkit-transition: background-image 1000ms linear;
		-ms-transition: background-image 1000ms linear;
		transition: background-image 1000ms linear;
  }
    100% {
		background-image: linear-gradient(to right, #8E0E00, #1F1C18);
		-webkit-transition: background-image 1000ms linear;
		-ms-transition: background-image 1000ms linear;
		transition: background-image 1000ms linear;
  }
}

.header_top {
	border: 0px solid green;
	width: 90%;
	max-width: 1400px;
	margin: 0 auto;
	padding: 25px 0 20px 0;
	position: fixed;
}

.header_text {
	border: 0px solid red;
	float: right;
}
.header_top .header_join {
	margin: 0 0 0 20px;
	color: #fff;
	font-size: 14px;
	border: 1px solid #fff;
	padding: 6px 20px;
	border-radius: 4px;
	font-family: "Roboto-Medium";
}
.header_top .header_join:hover {
	border: 1px solid #1dbf73;
	background-color: #1dbf73;
}
.h_text_a {
	font-family: "Roboto-Medium";
	font-size: 17px;
	color: #fff;
	margin: 0 0 0 25px;
	text-shadow: 1px 1px 2px #000;
}
.h_text_a:hover {
	text-shadow: 2px 2px 5px #000;
}
/* Chacha ata logo ar css suru*/
.header_image {
	border: 0px solid red;
	width: 120px;
	float: left;
	margin-top: -8px;
}
.header_logo {
	color: #fff;
	font-family: "Roboto-Bold";
	font-size: 30px;
	text-shadow: 1px 1px 2px #000;
}
.header_logo span {
	color: #000;
	margin: 0 -3px 0 -6px;
}
